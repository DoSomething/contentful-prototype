{
  "name": "phoenix",
  "description": ":sparkles:",
  "formation": {},
  "addons": ["jawsdb-maria", "heroku-redis", "papertrail"],
  "buildpacks": [
    {
      "url": "heroku/php"
    },
    {
      "url": "heroku/nodejs"
    }
  ],
  "env": {
    "APP_ENV": "development",
    "APP_DEBUG": "false",
    "APP_KEY": {
      "required": true
    },
    "APP_LOG": "errorlog",
    "APP_URL": "https://ds-phoenix-staging.herokuapp.com/",
    "DB_CONNECTION": "heroku_mariadb",
    "CONTENTFUL_CACHE": "false",
    "CONTENTFUL_CONTENT_API_KEY": {
      "required": true
    },
    "CONTENTFUL_ENVIRONMENT_ID": {
      "required": true
    },
    "CONTENTFUL_SPACE_ID": {
      "required": true
    },
    "CONTENTFUL_USE_PREVIEW_API": "true",
    "FACEBOOK_APP_ID": {
      "required": true
    },
    "GRAPHQL_URL": {
      "required": true
    },
    "NORTHSTAR_AUTHORIZATION_ID": {
      "required": true
    },
    "NORTHSTAR_AUTHORIZATION_SECRET": {
      "required": true
    },
    "NORTHSTAR_URL": {
      "required": true
    },
    "NPM_CONFIG_PRODUCTION": "false",
    "PHOENIX_LEGACY_PASSWORD": {
      "required": true
    },
    "PHOENIX_LEGACY_URL": {
      "required": true
    },
    "PHOENIX_LEGACY_USERNAME": {
      "required": true
    },
    "PUCK_URL": {
      "required": true
    },
    "ROGUE_URL": {
      "required": true
    },
    "SIXPACK_BASE_URL": {
      "required": true
    },
    "SIXPACK_COOKIE_PREFIX": {
      "required": true
    },
    "SIXPACK_ENABLED": "true",
    "SIXPACK_TIMEOUT": {
      "required": true
    }
  }
}
