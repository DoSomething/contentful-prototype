    "history": "^3.0.0",
    "lodash": "^4.17.4",
    "marked": "^0.3.6",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.2",
    "react-router": "^3.0.2",
    "react-router-dom": "^4.0.0-beta.6",
    "react-router-redux": "^4.0.8",
    "redux": "^3.6.0",
