{
  "private": true,
  "scripts": {
    "test": "jest --watch",
    "test:ci": "jest",
    "lint": "eslint --ext .js resources/assets",
    "flow": "flow",
    "start": "npm run fragment:load && webpack --env=development --hide-modules --watch",
    "build:dev": "npm run fragment:load && webpack --env=development --hide-modules",
    "build": "npm run fragment:load && webpack --env=production",
    "stat": "webpack --env=production --profile --json > stats.json",
    "analyze": "npm run stat && webpack-bundle-analyzer stats.json",
    "format": "prettier --write \"{docs,resources}/**/*.{js,md,scss,graphql}\"",
    "fragment:load": "node bootstrap/getFragmentTypes.js",
    "precommit": "pretty-quick --staged",
    "heroku-postbuild": "npm run build"
  },
  "engines": {
    "node": "8.x",
    "npm": "6.x"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "babel": {
    "presets": [
      "@dosomething/babel-config",
      "flow"
    ],
    "plugins": [
      "graphql-tag",
      "syntax-dynamic-import"
    ],
    "env": {
      "test": {
        "plugins": [
          "babel-plugin-dynamic-import-node"
        ]
      }
    }
  },
  "jest": {
    "clearMocks": true,
    "testEnvironment": "jest-environment-jsdom-global",
    "setupTestFrameworkScriptFile": "<rootDir>/jest-setup.js",
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/resources/assets/__mocks__/fileMock.js",
      "\\.(css|scss)$": "identity-obj-proxy"
    },
    "testURL": "http://localhost"
  },
  "dependencies": {
    "@contentful/rich-text-react-renderer": "^13.0.1",
    "@contentful/rich-text-types": "^13.0.0",
    "@dosomething/analytics": "^2.1.2",
    "@dosomething/forge": "^6.8.0",
    "@dosomething/gateway": "^1.4.0",
    "@dosomething/puck-client": "^1.6.0",
    "apollo-cache-inmemory": "^1.3.11",
    "apollo-client": "^2.4.7",
    "apollo-link": "^1.2.4",
    "apollo-link-batch-http": "^1.2.4",
    "apollo-link-context": "^1.0.10",
    "apollo-link-error": "^1.1.2",
    "apollo-link-persisted-queries": "^0.2.2",
    "babel-jest": "^20.0.3",
    "babel-plugin-dynamic-import-node": "^1.2.0",
    "babel-plugin-graphql-tag": "^1.6.0",
    "babel-preset-flow": "^6.23.0",
    "classnames": "^2.2.6",
    "core-js": "^2.5.7",
    "css-module-flow": "^1.0.0",
    "date-fns": "^2.0.0-alpha.25",
    "dom-delegate": "^2.0.3",
    "dotenv": "^7.0.0",
    "environment-badge": "^1.1.0",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "enzyme-to-json": "^3.3.4",
    "eslint-config-prettier": "^2.9.0",
    "fontfaceobserver": "^2.0.13",
    "graphql": "^0.13.2",
    "graphql-anywhere": "^4.1.23",
    "graphql-tag": "^2.10.0",
    "history": "^4.7.2",
    "jest-environment-jsdom": "^22.4.3",
    "jest-environment-jsdom-global": "^1.1.0",
    "localforage": "^1.7.3",
    "lodash": "^4.17.10",
    "markdown-it": "^8.4.0",
    "markdown-it-footnote": "^3.0.1",
    "markdown-it-for-inline": "^0.1.1",
    "node-fetch": "^2.3.0",
    "prettier": "^1.16.4",
    "prop-types": "^15.6.2",
    "query-string": "^5.1.1",
    "react": "^16.6.3",
    "react-addons-update": "^15.6.2",
    "react-apollo": "^2.3.2",
    "react-dom": "^16.6.3",
    "react-loadable": "^5.4.0",
    "react-media": "^1.9.2",
    "react-portal": "^4.2.0",
    "react-redux": "^5.1.1",
    "react-required-if": "^1.0.3",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-router-prop-types": "^1.0.4",
    "react-router-redux": "5.0.0-alpha.9",
    "react-test-renderer": "^16.6.3",
    "redux": "^3.7.2",
    "redux-logger": "^2.8.1",
    "redux-thunk": "^2.3.0",
    "regenerator-runtime": "^0.11.1",
    "sixpack-client": "^2.1.0"
  },
  "devDependencies": {
    "@dosomething/babel-config": "^2.2.2",
    "@dosomething/eslint-config": "^4.0.0",
    "@dosomething/webpack-config": "^4.1.1",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "contentful-management": "^5.4.0",
    "eslint-loader": "^2.0.0",
    "flow-bin": "0.59.0",
    "husky": "^0.14.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^22.4.4",
    "minimist": "^1.2.0",
    "modernizr": "^3.6.0",
    "pretty-quick": "^1.8.0",
    "redux-devtools": "^3.4.2",
    "redux-devtools-dock-monitor": "^1.1.3",
    "redux-devtools-log-monitor": "^1.4.0",
    "turndown": "5.0.1",
    "webpack": "^4.26.1",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-cli": "^3.1.2",
    "winston": "^3.1.0"
  }
}
