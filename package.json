{
  "private": true,
  "scripts": {
    "test": "jest --watch",
    "test:ci": "jest",
    "cypress": "cypress open",
    "cypress:ci": "cypress run -c baseUrl=http://127.0.0.1:8000",
    "lint": "eslint --ext .js resources/assets",
    "flow": "flow",
    "start": "npm run schema:fragments && webpack --env=development --hide-modules --watch",
    "build:dev": "npm run schema:fragments && webpack --env=development --hide-modules",
    "build": "npm run schema:fragments && webpack --env=production",
    "stat": "webpack --env=production --profile --json > stats.json",
    "analyze": "npm run stat && webpack-bundle-analyzer stats.json public/next/assets",
    "format": "prettier --write \"{docs,resources}/**/*.{js,md,scss,graphql}\"",
    "schema:fetch": "apollo service:download --endpoint https://graphql-dev.dosomething.org/graphql",
    "schema:fragments": "node bootstrap/getFragmentTypes.js",
    "heroku-postbuild": "npm run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "engines": {
    "node": "10.x",
    "npm": "6.x"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "babel": {
    "presets": [
      [
        "@dosomething",
        {
          "withPolyfills": false
        }
      ],
      "@babel/preset-flow"
    ]
  },
  "browserslist": [
    ">0.5%",
    "ie 11",
    "not op_mini all"
  ],
  "jest": {
    "clearMocks": true,
    "testEnvironment": "jest-environment-jsdom-global",
    "setupFilesAfterEnv": [
      "<rootDir>/jest-setup.js"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/resources/assets/__mocks__/fileMock.js",
      "\\.(css|scss)$": "identity-obj-proxy"
    },
    "testURL": "http://localhost"
  },
  "dependencies": {
    "@contentful/rich-text-react-renderer": "^13.2.0",
    "@contentful/rich-text-types": "^13.1.0",
    "@dosomething/forge": "^6.9.1",
    "@dosomething/gateway": "^2.0.1",
    "@dosomething/puck-client": "^1.6.0",
    "apollo-cache-inmemory": "^1.6.2",
    "apollo-client": "^2.6.2",
    "apollo-link": "^1.2.12",
    "apollo-link-batch-http": "^1.2.12",
    "apollo-link-context": "^1.0.18",
    "apollo-link-error": "^1.1.11",
    "apollo-link-persisted-queries": "^0.2.2",
    "babel-jest": "^24.8.0",
    "classnames": "^2.2.6",
    "css-module-flow": "^1.0.0",
    "date-fns": "2.0.0-alpha.26",
    "dom-delegate": "^2.2.1",
    "dotenv": "^8.0.0",
    "environment-badge": "^1.2.1",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.3.5",
    "eslint-config-prettier": "^2.9.0",
    "fontfaceobserver": "^2.1.0",
    "graphql": "~14.2.1",
    "graphql-anywhere": "^4.2.4",
    "graphql-tag": "^2.10.1",
    "history": "^4.9.0",
    "jest-environment-jsdom": "^24.8.0",
    "jest-environment-jsdom-global": "^1.2.0",
    "localforage": "^1.7.3",
    "lodash": ">=4.17.13",
    "lodash-es": ">=4.17.14",
    "markdown-it": "^8.4.0",
    "markdown-it-footnote": "^3.0.1",
    "markdown-it-for-inline": "^0.1.1",
    "node-fetch": "^2.6.0",
    "prettier": "^1.18.2",
    "prop-types": "^15.7.2",
    "query-string": "^5.1.1",
    "react": "^16.8.6",
    "react-addons-update": "^15.6.2",
    "react-apollo": "^2.5.6",
    "react-dom": "^16.8.6",
    "react-loadable": "^5.4.0",
    "react-media": "^1.9.2",
    "react-portal": "^4.2.0",
    "react-redux": "^6.0.0",
    "react-required-if": "^1.0.3",
    "react-router": "^5.0.1",
    "react-router-dom": "^5.0.1",
    "react-router-prop-types": "^1.0.4",
    "react-test-renderer": "^16.8.6",
    "redux": "^4.0.1",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0",
    "sixpack-client": "^2.1.0",
    "usa-states": "0.0.5"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-flow": "^7.0.0",
    "@dosomething/babel-preset": "^3.2.0",
    "@dosomething/eslint-config": "^5.0.1",
    "@dosomething/webpack-config": "^5.1.0",
    "apollo": "^2.13.1",
    "bson": "^4.0.2",
    "contentful-management": "^5.8.0",
    "cypress": "^3.3.1",
    "cypress-file-upload": "^3.1.4",
    "cypress-graphql-mock": "DFurnes/cypress-graphql-mock#with-persisted-batch-support",
    "eslint-loader": "^2.1.2",
    "eslint-plugin-cypress": "^2.2.1",
    "faker": "^4.1.0",
    "flow-bin": "0.59.0",
    "graphql-tools": "^4.0.4",
    "husky": "^2.4.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.8.0",
    "minimist": "^1.2.0",
    "modernizr": "^3.7.1",
    "pretty-quick": "^1.11.1",
    "redux-devtools": "^3.5.0",
    "redux-devtools-dock-monitor": "^1.1.3",
    "redux-devtools-log-monitor": "^1.4.0",
    "turndown": "^5.0.3",
    "webpack": "~4.28.0",
    "webpack-bundle-analyzer": "^3.3.2",
    "webpack-cli": "^3.3.4",
    "winston": "^3.2.1"
  }
}
