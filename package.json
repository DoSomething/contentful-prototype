{
  "private": true,
  "scripts": {
    "test": "jest --watch",
    "test:ci": "jest",
    "lint": "eslint --ext .js resources/assets",
    "flow": "flow",
    "start": "webpack --env=development --hide-modules --watch",
    "build:dev": "webpack --env=development --hide-modules",
    "build": "webpack --env=production",
    "stat": "webpack --env=production --json > stats.json",
    "format": "prettier --write \"{docs,resources}/**/*.{js,md,scss,graphql}\"",
    "precommit": "pretty-quick --staged",
    "heroku-postbuild": "npm run build"
  },
  "engines": {
    "node": "8.x",
    "npm": "5.x"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all"
  },
  "babel": {
    "presets": [
      "@dosomething/babel-config",
      "flow"
    ]
  },
  "jest": {
    "testEnvironment": "jest-environment-jsdom-global",
    "setupTestFrameworkScriptFile": "<rootDir>/jest-setup.js",
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/resources/assets/__mocks__/fileMock.js",
      "\\.(css|scss)$": "identity-obj-proxy"
    }
  },
  "dependencies": {
    "@dosomething/analytics": "^2.1.1",
    "@dosomething/forge": "^6.8.0",
    "@dosomething/gateway": "^1.2.2",
    "@dosomething/puck-client": "^1.4.0",
    "@publica/url-polyfill": "^0.5.8",
    "apollo-cache-inmemory": "^1.1.12",
    "apollo-client": "^2.2.8",
    "apollo-link": "^1.2.1",
    "apollo-link-context": "^1.0.7",
    "apollo-link-error": "^1.0.7",
    "apollo-link-http": "^1.5.3",
    "babel-jest": "^20.0.3",
    "babel-polyfill": "^6.26.0",
    "babel-preset-flow": "^6.23.0",
    "classnames": "^2.2.5",
    "css-module-flow": "^1.0.0",
    "date-fns": "^1.29.0",
    "dom-delegate": "^2.0.3",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.3",
    "eslint-config-prettier": "^2.9.0",
    "fontfaceobserver": "^2.0.13",
    "graphql": "^0.13.2",
    "graphql-anywhere": "^4.1.8",
    "graphql-tag": "^2.8.0",
    "history": "^4.7.2",
    "jest-environment-jsdom": "^22.4.3",
    "jest-environment-jsdom-global": "^1.0.3",
    "lodash": "^4.17.4",
    "markdown-it": "^8.4.0",
    "markdown-it-footnote": "^3.0.1",
    "markdown-it-for-inline": "^0.1.1",
    "prettier": "^1.11.1",
    "prop-types": "^15.5.8",
    "query-string": "^5.1.1",
    "react": "^16.3.1",
    "react-addons-update": "^15.6.2",
    "react-apollo": "^2.1.2",
    "react-dom": "^16.3.1",
    "react-portal": "^4.1.4",
    "react-redux": "^5.0.7",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-router-prop-types": "^1.0.3",
    "react-router-redux": "5.0.0-alpha.9",
    "react-test-renderer": "^16.3.1",
    "redux": "^3.7.2",
    "redux-logger": "^2.8.1",
    "redux-thunk": "^2.2.0",
    "sixpack-client": "^2.1.0",
    "whatwg-fetch": "^2.0.4"
  },
  "devDependencies": {
    "@dosomething/babel-config": "^2.1.0",
    "@dosomething/eslint-config": "^4.0.0",
    "@dosomething/webpack-config": "^4.0.0",
    "contentful-management": "^5.0.0",
    "eslint-loader": "^2.0.0",
    "flow-bin": "0.59.0",
    "husky": "^0.14.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^22.4.3",
    "minimist": "^1.2.0",
    "modernizr": "^3.6.0",
    "pretty-quick": "^1.4.1",
    "redux-devtools": "^3.4.1",
    "redux-devtools-dock-monitor": "^1.1.3",
    "redux-devtools-log-monitor": "^1.4.0",
    "tailwindcss": "^0.4.3",
    "webpack": "^4.5.0",
    "webpack-cli": "^2.0.14"
  }
}
