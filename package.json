{
  "private": true,
  "scripts": {
    "test": "NODE_ENV=test && node --harmony ./node_modules/jest/bin/jest.js --watch",
    "test:ci": "NODE_ENV=test && node --harmony ./node_modules/jest/bin/jest.js",
    "lint": "eslint --ext .js resources/assets",
    "start": "npm run clean && NODE_ENV=development webpack --watch",
    "build:dev": "npm run clean && NODE_ENV=development webpack",
    "build": "npm run clean && NODE_ENV=production webpack",
    "stat": "NODE_ENV=production webpack --json > stats.json",
    "clean": "rm -rf public/next/assets",
    "heroku-postbuild": "sh bootstrap/setup.sh"
  },
  "babel": {
    "presets": [
      "@dosomething/babel-config"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/resources/assets/__mocks__/fileMock.js",
      "\\.(css|scss)$": "identity-obj-proxy"
    }
  },
  "dependencies": {
    "@dosomething/analytics": "^2.0.2",
    "@dosomething/forge": "^6.7.4",
    "@dosomething/gateway": "^1.0.1",
    "babel-polyfill": "^6.23.0",
    "classnames": "^2.2.5",
    "dom-delegate": "^2.0.3",
    "dosomething-modal": "^0.3.0",
    "easy-container": "^1.0.0",
    "enzyme": "^2.8.2",
    "enzyme-to-json": "^1.5.1",
    "fontfaceobserver": "^2.0.9",
    "history": "^4.5.1",
    "lodash": "^4.17.4",
    "marked": "^0.3.6",
    "prop-types": "^15.5.8",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.2",
    "react-router": "^4.1.1",
    "react-router-dom": "^4.0.0-beta.6",
    "react-router-redux": "5.0.0-alpha.6",
    "redux": "^3.6.0",
    "redux-logger": "^2.8.1",
    "redux-thunk": "^2.2.0",
    "sixpack-client": "^2.1.0",
    "whatwg-fetch": "^2.0.3"
  },
  "devDependencies": {
    "@dosomething/babel-config": "^1.0",
    "@dosomething/eslint-config": "^2.0.0",
    "@dosomething/webpack-config": "^2.0.0",
    "babel-eslint": "^7.2.2",
    "dotenv": "^4.0.0",
    "eslint-loader": "^1.7.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^19.0.2",
    "modernizr": "^3.3.1",
    "react-addons-test-utils": "^15.5.1",
    "react-test-renderer": "^15.5.4",
    "redux-devtools": "^3.3.2",
    "redux-devtools-dock-monitor": "^1.1.1",
    "redux-devtools-log-monitor": "^1.2.0",
    "webpack": "^2.4.1",
    "webpack-dev-server": "^2.4.2"
  }
